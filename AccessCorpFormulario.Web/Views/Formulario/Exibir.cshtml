@model AccessCorpFormulario.Domain.ModelView.FormularioModelView

@{
    ViewBag.Title = "Exibir";
}

<h2>
    Nome do Formulário: @Model.NomeFormulario
</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-md-6">

                <label>Formulário de: @Model.DescricaoFormulario </label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6">
                <label>Formulário: @Model.Situacao</label>
            </div>
        </div>

        <fieldset>
            <legend></legend>

            @foreach (var formularioCampo in Model.FormularioCampos)
            {
                <hr />
                Html.RenderPartial("_campo", formularioCampo);
            }

        </fieldset>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar para Lista", "Lista")
</div>
