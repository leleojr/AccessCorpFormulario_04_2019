@model AccessCorpFormulario.Domain.ModelView.FormularioCampoModelView

@if (Model.IdTipoCampo == 1)//Textbox
{
    <div class="form-group">
        <label class="control-label col-md-2">@Model.DescricaoCampo</label>
        <div class="col-md-10">
            <div class='input-group'>
                @Html.EditorFor(model => model.IdTipoCampo, new { htmlAttributes = new { @maxlength = 10, @class = "form-control" } })
            </div>
        </div>
    </div>
}
else if (Model.IdTipoCampo == 2)// Dropbox
{
    <div class="form-group">
        <label class="control-label col-md-2">@Model.DescricaoCampo</label>
        <div class="col-md-10">
            <div class='input-group'>
                @Html.DropDownList("idTipoCampo", new SelectList(Model.ValorCampos, "IdValorCampo", "ValorCampo"),"--Selecione--", htmlAttributes: new { @class = "form-control col-md-2  select-2" })
            </div>
        </div>
    </div>
}
else if (Model.IdTipoCampo == 3)//Radio Button
{
    <div class="form-group">
        <label class="control-label col-md-2">@Model.DescricaoCampo</label>
        <div class="col-md-10">
            <div class='input-group'>
                @Html.RadioButtonFor(model => model.IdTipoCampo, new { htmlAttributes = new { @maxlength = 10, @class = "form-control" } })
            </div>
        </div>
    </div>
}